{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metric Definition",
    "type": "object",
    "properties": {
        "name": { "type": "string" },
        "abbreviation": {
            "type": [
                "string",
                "null"
            ]
        },
        "description": { "type": "string" },
        "id": { "type": "string" },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
    },
    "required": [
        "name",
        "abbreviation",
        "description",
        "id",
        "version"
    ],
    "additionalProperties": false
}